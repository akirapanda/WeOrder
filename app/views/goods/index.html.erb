<div class="hero-unit">
<h1>我的商品</h1>

</div>
<div>

  	<div class="btn-group offset10">
	  <button class="btn btn-success"><i class="icon-cog"></i></button>
	  <button class="btn btn-success dropdown-toggle" data-toggle="dropdown">
	    <span class="caret"></span>
	  </button>
	  <ul class="dropdown-menu">
		<li><%= link_to "新增商品",new_good_path%></li>  </ul>
	</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>图片</th>
      <th>名称</th>
      <th>介绍</th>
      <th>价格</th>
      <th>单位</th>
	  <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @goods.each do |good| %>
      <tr>
        <td><%= image_tag good.cover %></td>
        <td><%= link_to good.name, good %></td>
        <td><%= good.content %></td>
        <td><%= good.price %></td>
        <td><%= good.unit %></td>
        <td>
			<div class="btn-group">
			  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
			    操作
			    <span class="caret"></span>
			  </a>
			<ul class="dropdown-menu">
				<li><%= link_to '编辑', edit_good_path(good) %></li>
        		<li><%= link_to '删除', good, method: :delete, data: { confirm: '确定删除吗?' } %></li>
			</ul>
			</div>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>