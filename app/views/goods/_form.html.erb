<ul class="nav nav-pills">
  <li class="active">
    <a href="#">基础信息</a>
  </li>
	<li><%=link_to '相关配图',photo_good_path(@good)%></li>
  

</ul>

<div class="form">
<%= simple_form_for(@good,:html=>{:class=>"form-horizontal"}) do |f| %>
<%= render "shared/error_messages",:target=>@good%>
<fieldset>

	
	<div class="control-group">
		<%= f.label :cover ,:class=>"control-label"%>
    	<div class="controls">
    		<%= f.file_field :cover %>
		</div>
  	</div>
	<% if @good.cover?%>
	<div class="control-group">
		<div class="controls">
		<%= image_tag @good.cover_url(:normal) %>
		</div>
	</div>
	<%end%>
  <div class="control-group">
    <%= f.label :name ,:class=>"control-label"%>
    <div class="controls">
    <%= f.text_field :name %>
	</div>
  </div>
  <div class="control-group">
    <%= f.label :content,:class=>"control-label"%>
    <div class="controls">
    <%= f.text_field :content %>
	</div>
  </div>
  <div class="control-group">
    <%= f.label :price,:class=>"control-label" %>
    <div class="controls">
    	<%= f.text_field :price %>
	</div>
  </div>
  <div class="control-group">
	<%= f.label :unit,:class=>"control-label" %>
    <div class="controls">
    	<%= f.text_field :unit %>
	</div>
  </div>
  <div class="control-group">
	<%= f.label :body_html,:class=>"control-label" %>
	
    <div class="controls">
		<button id="rich" type="button" class="btn btn-primary" data-loading-text="富文本编辑中">变更为富文本编辑</button>
	<br>
	    <%= f.text_area :body_html,:id=>"post_body",:class=>"textarea" %>	
	</div>	
  </div>


</fieldset>
	<div class="control-group">
  		<div class="controls">
    		<%= f.submit "提交" ,:class=>"btn btn-primary"%>
			<%= link_to '返回', goods_path,:class=>"btn" %>
  		</div>
	</div>
<% end %>
</div>
