<div id="goods_container" class="container shadow">
<div class="goods_head">
		<h1><%= @good.name%></h1>
		<h2><%= @good.content%></h2>
		<ul class="nav nav-tabs">
		  <li><a href="#" data-toggle="tab">首页</a></li>
		  <li><a href="#" data-toggle="tab">购买记录</a></li>
		  <li><a href="#messages" data-toggle="tab">留言</a></li>
		</ul>
</div>
<div class="goods_body">
	<div class="row">
		<div class="span9">
			<div id="main">
				<div id="myCarousel" class="carousel slide">
				  <ol class="carousel-indicators">
				    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
				    <li data-target="#myCarousel" data-slide-to="1"></li>
				    <li data-target="#myCarousel" data-slide-to="2"></li>
				  </ol>
				  <!-- Carousel items -->
				  <div class="carousel-inner">
				    <div class="active item"><%= image_tag @good.cover_url(:large) %>
					</div>
				    <div class="item">…</div>
				    <div class="item">…</div>
				  </div>
				  <!-- Carousel nav -->
				  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
				  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
				</div>
				<div id="body-html">
				<%=raw @good.body_html%>
			</div>
			</div>

		</div>
		<div id="sidebar" class="span3">
			<div class="price">
	  			&yen <%= @good.price %> / <%= @good.unit %>
			</div>
		</div>
</div>

</div>