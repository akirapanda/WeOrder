<div id="goods_container" class="container shadow">
<div class="goods_head">
		<h1><%= @good.name%></h1>
		<h2><%= @good.content%></h2>
		<ul id="myTab" class="nav nav-pills">
		  <li class="active"><%=link_to "商品信息",good_url(@good)%></li>
		  <li><%=link_to "谁买了",buyer_good_url(@good)%></li>	
		
		  <li ><%=link_to "评价&留言",comments_good_url(@good)%></li>		
		
		</ul>
</div>
<div class="goods_body">
	<div class="row">
		<div class="span9">
			<div id="main">
				<%=carousel_tag @good%>
				<div id="body-html">
				<%=raw @good.body_html%>

			</div>
			</div>

		</div>
		<div id="sidebar" class="span3">
			<div class="price">
	  			 <%= number_to_currency(@good.price,:unit=>"&yen") %> / <%= @good.unit %>
			</div>
			<div class="buy">
				<%= simple_form_for(@shopping_item,:method=>:post) do |f| %>
				
				<div class="number-counter">
				 	<a href="javascript:void(0)" class="decrease"><i class="icon-minus"></i></a>
					<input type="text"class="input-mini" readonly="true" name="count" value="1" ><%=@good.unit%></input>
					<a href="javascript:void(0)" class="increase "><i class="icon-plus"></i></a>
				</div>
				<input value="<%=@good.id%>" name="product_id" class="hide"/>
				<%=f.submit "购买",:class=>'btn btn-primary'%>
				<%end%>
			</div>
		</div>
</div>

</div>