<div class="goods_head">
		<h1><%= @good.name%></h1>
		<h2><%= @good.content%></h2>
</div>
<div class="goods_body">
	<div class="row">
		<div class="span9">
			<div id="main">
			<%= image_tag @good.cover_url(:large) %>
			</div>
		</div>
		<div id="sidebar" class="span3">
			<div class="price">
	  			&yen <%= @good.price %> / <%= @good.unit %>
			</div>
		</div>
</div>

