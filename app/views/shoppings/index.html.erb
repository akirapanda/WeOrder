<div class="hero-unit">
<h1>我的客户订单</h1>
</div>
<table class="table">
  <thead>
    <tr>
      <th>客户名称</th>
      <th>客户地址</th>
      <th>总金额</th>
      <th>创建时间</th>
      <th>
			<div class="btn-group">
		  		<button class="btn btn-success"><i class="icon-cog"></i></button>
		  		<button class="btn btn-success dropdown-toggle" data-toggle="dropdown">
		    	<span class="caret"></span>
		  		</button>
		  		<ul class="dropdown-menu">
					<li><%= link_to '新增客户订单', new_shopping_path %></li>
				</ul>
			</div>
	</th>
    </tr>
  </thead>

  <tbody>
    <% @shoppings.each do |shopping| %>
      <tr>
        <td><%= shopping.customer_name %></td>
        <td><%= shopping.customer_address %></td>
        <td><%= shopping.amount %></td>
		<td><%= shopping.created_at%></td>
        <td><%= link_to 'Show', shopping %>
       <%= link_to 'Edit', edit_shopping_path(shopping) %>
        <%= link_to 'Destroy', shopping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>