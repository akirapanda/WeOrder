<div class="hero-unit">
<h1>订单详细信息</h1>
</div>
<div class="container">
<p>
  <strong>客户名称:</strong>
  <%= @shopping.customer_name %>
</p>
<p>
  <strong>客户地址:</strong>
  <%= @shopping.customer_address %>
</p>
<p>
  <strong>订单金额:</strong>
  <%= @shopping.amount %>
</p>
<p>
  <strong>下单时间:</strong>
  <%= @shopping.created_at %>
</p>
<table class="table">
	<thead>
		<th>商品名称</th>
		<th>订购数量</th>
		<th>单价</th>
		<th>小计</th>
	</thead>
	<tbody>
		<% @shopping.shopping_items.each do |item|%>
			<tr>
				
				<td><%=item.good.name%></td>
				<td><%=item.count%> <%=item.good.unit%></td>
				<td>&yen<%=item.good.price%> / <%=item.good.unit%></td>
				<td>&yen<%=item.amount%></td>
			</tr>
		<%end%>
	</tbody>
</table>

<%= link_to '编辑', edit_shopping_path(@shopping),:class=>"btn" %>
<%= link_to '返回', shoppings_path,:class=>"btn"  %>
</div>

