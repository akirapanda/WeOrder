<%= simple_form_for(@shopping) do |f| %>
<%= render "shared/error_messages",:target=>@shopping%>
<fieldset>
	<%@shopping.shopping_items.each do |item| %>
	<div class="goods-div">
		<div class="image-center">
		<%= image_tag item.product.cover_url(:normal)%>
		</div>
		<div class="name-dashed">
		<%= item.product_name%><br/>
		<small><%= item.product.content%></small>
		</div>
		<div class="number-container">
			<div class="price-rest">
				<div class="price" >
					<p>&yen<%= item.price%><%= item.product_unit%></p>
				</div>
				<div class="rest">
					<p>库存信息</p>
				</div>
			</div>
			<div class="number-counter">
			 	<a href="javascript:void(0)" class="decrease"><i class="icon-minus"></i></a>
				<input type="text"class="input-mini" readonly="true" name="goods[<%=item.product.id%>][count]" value="<%=item.count%>" ></input>
				<a href="javascript:void(0)" class="increase "><i class="icon-plus"></i></a>
			</div>
		</div><!--end of container-->
	</div>
	<%end%>


</fieldset>
<div class="contact-info">
<legend>
您的联系方式
</legend>

<%= f.input :customer_name%>

<%= f.input :customer_build,:collection=>Shopping::BUILDS%>
<%= f.input :customer_address,:input_html=>{:style=>"height:40px;"},:placeholder=>"公寓楼号-寝室号"   %>

<%= f.input :receive_time,:collection=>Shopping::RECEIVE_TIMES %>
<%= f.input :mobile_phone%>
<%= f.input :remark ,as: :text,input_html: { maxlength: 50 } %>

	<%= f.submit "下单",:class=>"btn btn-success"%>
</div>
<%end%>
