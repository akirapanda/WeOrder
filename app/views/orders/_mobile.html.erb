
<div data-role="page" data-theme="a">
	<%= render "shared/error_messages",:target=>@shopping%>
	

		<div data-role="header" data-position="inline" data-theme="b">
			<h1><%=@order.name%></h1>
		</div>
		
		
		<div id="content" class="container">
			<%if notice%>
			<div class="alert alert-info fade in">
				<a class="close" data-dismiss='alert' href="#">x</a>
				<p id="notice"><%= notice %></p>
			</div>
			<%end%>
			<%if alert%>
			<div class="alert alert-block alert-error">
				<a class="close" data-dismiss='alert' href="#">x</a>
				<p id="notice"><%= alert %></p>
			</div>
			<%end%>
		</div>
		<div data-role="content" data-theme="a">
			<%= simple_form_for(@shopping ,:html=>{'data-ajax'=>"false"}) do |f| %>
			
			<div data-role="collapsible-set">
					<div data-role="collapsible" data-theme="b" data-content-theme="b" data-collapsed="false">
					   <h3>订单信息</h3>
						<div class="container">
						<%@shopping.shopping_items.each do |item| %>
							<div class="product_item">
								<div class="row">
									<div class="product_image">
										<%=image_tag(item.good.cover_url(:mobile))%>
									</div>
									<div class="product_description">
										<p><%= item.good.name%></p>
										<p class="product_content"><%= item.good.content%></p>
									</div>
								</div>
								<div class="row">
									<div class=" price" >
										<p><%= number_to_currency item.good.price,:unit=>"￥"%>/<%= item.good.unit%></p>
									</div>
									<div class=" number">
										<div class="number-counter"  style="float:left;" >
											<span>买</span>
										 	<a href="javascript:void(0)" class="decrease" data-role="button" data-inline="true" data-mini="true"><i class="icon-minus"></i></a>
											<input type="number" style="width:40px;height:30px;background-color:white;border:0;" readonly="true" name="goods[<%=item.good.id%>][count]" value="0" ></input>
											<a href="javascript:void(0)" class="increase" data-role="button" data-inline="true" data-mini="true"><i class="icon-plus"></i></a><span><%=item.good.unit%></span>
										</div>
									</div>
								</div>
							</div>
								
				     	<%end%>
					</div>
				
				</div>		
				<div class="contact-info">
					<input name="order_id" type="text" value="<%=@order.id%>" style="display:none"></input>
					
				<legend>
				您的联系方式
				</legend>
				<%= f.input :customer_name ,as: :text %>
				<%= f.input :customer_address ,as: :text %>
				<%= f.input :mobile_phone ,as: :text %>
				<%= f.input :remark ,as: :text %>
				<button type="submit" data-role="button" data-theme="b" name="submit">下单</button>
				</div>
			<%end%>
		</div>
		
		

	</div>
