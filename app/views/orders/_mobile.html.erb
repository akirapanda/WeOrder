
<div data-role="page" id="page">
		<%= render "shared/error_messages",:target=>@shopping%>
	

		<div data-role="header" data-position="inline" data-theme="b">
      
			<h1><%=@order.name%></h1>
      
		</div>
		
		<div data-role="content" data-theme="c">
			<div id="content" class="container">
				<%if notice%>
				<div class="alert alert-info fade in">
					<a class="close" data-dismiss='alert' href="#">x</a>
					<p id="notice"><%= notice %></p>
				</div>
				<%end%>
				<%if alert%>
				<script>
					alert("<%= alert %>");
				</script>
				<%end%>
			</div>
			<%= simple_form_for(@shopping ,:html=>{'data-ajax'=>"false"}) do |f| %>

			<div data-role="collapsible-set">
					<div data-role="collapsible" data-theme="g" data-content-theme="g" data-collapsed="false">
					   <h3>商品信息</h3>
						<div class="products">
							<%default= @shopping.shopping_items.size==1?1:0%>
							
							<%@shopping.shopping_items.each do |item| %>
							<div class="product_item">
								
								<div class="row">
									<div class="product_image">
										<%=image_tag(item.product.cover_url(:mobile))%>
									</div>
									<div class="product_description">
										<p><%= item.product.name%></p>
										<p class="product_content"><%= item.product.content%></p>
									</div>
								</div><!--end of row-->
								
								<div class="row">
									<div class="product_footer">
										<div class=" price" >
											<p><%= number_to_currency item.product.price,:unit=>"￥"%>/<%= item.product.unit%></p>
										</div>
										
										<div class="number">
											<div class="number-counter" >
											 	<a href="javascript:void(0)" class="decrease" data-role="button" data-theme="g"  data-inline="true" data-mini="true"><i class="fa fa-minus"></i></a>
												<input type="number" class="counter_input" readonly="true" name="goods[<%=item.product.id%>][count]" value="<%=@default%>"></input>
												<a href="javascript:void(0)" class="increase" data-role="button" data-inline="true" data-mini="true" data-theme="g" ><i class="fa fa-plus"></i></a><span><%=item.product.unit%></span>
											</div>
										</div>
									</div><!--end of row-->
									</div>
								</div> <!--end of product_item-->
								
				     	<%end%>
						</div> <!--end of products-->
				
					</div> <!-- end of collapsible-->
				
			</div><!-- end of set-->
				
			<div class="contact-info">
				<input name="order_id" type="text" value="<%=@order.id%>" style="display:none"/>
				<legend>
				您的联系方式
				</legend>
				<%= f.input :mobile_phone,:input_html=>{:style=>"height:40px;"},:placeholder=>"您的手机号码"   %>
				<%= f.input :customer_build,:collection=>Shopping::BUILDS,:selected=>"其他"%>
				<%= f.input :customer_address,:input_html=>{:style=>"height:40px;"},:placeholder=>"公寓楼号-寝室号"  %>
				
				<%= f.input :receive_time,:collection=>Shopping.available_time,:selected=>Shopping::available_time[0] %>
				<%= f.input :remark,:input_html=>{:style=>"height:40px;"} ,:placeholder=>"请告诉我们是否有额外的要求比如送货时间与校区" %>
				<hr/>
				<%= f.input :customer_name,:input_html=>{:style=>"height:40px;"} ,:label=>"怎么称呼您（可选）",:placeholder=>"请告诉我们的小伙伴们怎么称呼您" %>
				<button type="submit" data-role="button" data-theme="b" name="submit">下单</button>
			</div>
				
			<%end%>
		</div> <!--end of content-->
		
		

	</div>
