<%= simple_form_for(@shopping) do |f| %>
<p id="notice"><%= notice %></p>
<form>
<fieldset>
    <legend>
      <span class="form-name"><%=@order.name%></span>
      <small class="form-description"><p><%=@order.content%></p></small>
    </legend>
	<%@shopping.shopping_items.each do |item| %>
	<div class="goods_div">
		<div class="image-center">
		<%= image_tag item.good.cover_url(:normal)%>
		</div>
		<div class="name">
		<%= item.good.name%><br/>
		<small><%= item.good.content%></small>

		</div>
		<div class="price">
		&yen<%= item.good.price%><%= item.good.unit%>
		</div>
		<div class="number_container">
			 <a href="javascript:void(0)" class="decrease"><i class="icon-minus"></i></a>
			<input type="text"class="input-small" name="goods[<%=item.good.id%>][count]" value="0" ></input>
			<a href="javascript:void(0)" class="increase "><i class="icon-plus"></i></a>
		</div>
	</div>
	<%end%>


</fieldset>
<div>
<%= f.input :customer_name%>
<%= f.input :customer_address%>
</div>
<div class="actions">
  <input name="commit" type="submit" value="Update Good" />
</div>
<%end%>
