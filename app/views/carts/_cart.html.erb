	<li class="dropdown">
		<a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-shopping-cart"></i></a>
		<ul class="dropdown-menu">
			<%if @cart!=nil%>
			<%@cart.shopping_items.each do |item|%>
						<li>
							<%=link_to item.product do%>
								<span class="pull-left"><small><%=item.count%> x</small> <%=item.product_name%></span> &nbsp; <small class="pull-right label label-info"><%=number_to_currency(item.amount,:unit=>"&yen")%></small>
							<%end%>
						</li>
			<%end%>

			<li>
				<%=link_to @cart do%>
					去购物车查看所有购买的商品<i class="icon-chevron-right"></i>
				<%end%>
				<%end%>
		</ul>
	</li>