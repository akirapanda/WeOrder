<div class="hero-unit">
<h1>我的购物车</h1>

</div>
<div>
<%if @cart.shopping_items.size>0%>
<table class="table">
	<thead>
		<tr>
			<th>商品名称</th>
			<th>数量</th>
			<th>小计</th>
		</tr>
	</thead>
	<tbody>
		<%@cart.shopping_items.each do |item|%>
		<tr> 			
			<td><%=item.good.name%></td>
			<td><%=item.count%> <%= item.good.unit %></td>
			<td><%=number_to_currency(item.amount,:unit=>"&yen")%></td>
		</tr>
<%end%>
</tbody>

<table>	
</div>
	<div class="offset8">
<%= link_to '清空购物车', @cart, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn" %>
<%= link_to '进入结算页面', new_shopping_path ,:method=>:get,:class=>"btn btn-primary"%>   
</div>
<%else%>
<p>购物车还是空的</p>
<%end%>