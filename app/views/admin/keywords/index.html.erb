<%= content_for :title do %>
	浏览自动回复关键字信息
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>接受信息种类</th>
      <th>关键值</th>
	  <th>回复信息种类</th>
      <th>回复消息内容或订表格号码</th>
      <th>
      	<div class="btn-group">
	  		<button class="btn btn-success"><i class="icon-cog"></i></button>
	  		<button class="btn btn-success dropdown-toggle" data-toggle="dropdown">
	    	<span class="caret"></span>
	  		</button>
	  		<ul class="dropdown-menu">
				<li><%= link_to "新增关键字",new_keyword_path%></li>
			</ul>
		</div>
      </th>

    </tr>
  </thead>

  <tbody>
    <% @keywords.each do |keyword| %>
      <tr>
        <td class="center"><%=  keyword.cate %></td>
        <td><%= link_to keyword.keywords,keyword %></td>
        <td><%= keyword.reply_type %></td>

        <td><%= keyword.reply_content %></td>
        <td>
			<div class="btn-group">
			  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
			    操作
			    <span class="caret"></span>
			  </a>
			<ul class="dropdown-menu">
				<li><%= link_to '编辑', edit_keyword_path(keyword) ,:method=>:get%></li>
        		<li><%= link_to '删除', keyword, method: :delete, data: { confirm: '确定删除吗?' } %></li>
			</ul>
			</div>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @keywords %>

