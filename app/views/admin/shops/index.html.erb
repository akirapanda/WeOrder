<%= content_for :title do %>
	商户列表
<% end %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>名称</th>
      <th>别称</th>
      <th>分类</th>
      <th>描述</th>
      <th>创建时间</th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= link_to shop.name , [:admin,shop]%></td>
        <td><%= shop.short_name %></td>
        <td><%= shop.cate_type %></td>
        <td><%= shop.description %></td>
        <td><%=l shop.created_at, :format=>:long %></td>
      </tr>
    <% end %>
  </tbody>
</table>

