<%= content_for :title do %>
	用户信息
<% end %>

<div class='row-fluid'>
    <div class='span3 box'>
        <div class='box-content'>
            <img alt="230x230&amp;text=photo" src="http://placehold.it/230x230&amp;text=Photo" />
        </div>
    </div>
    <div class='span9 box'>
        <div class='box-content box-double-padding'>
						<div class='span4'>
                <div class='lead'>
                    <i class='icon-user text-contrast'></i>
                    个人信息
                </div>
               
            </div>


						
						<%= simple_form_for [:admin,@user] do |f|%>
                <fieldset>

                        <div class='control-group'>
                            <label class='control-label'>邮件地址</label>
                            <div class='controls'>
															<%=f.input :email,:label=>false%>
                            </div>
                        </div>
                        <div class='control-group'>
                            <label class='control-label'>是否管理员</label>
                            <div class='controls'>
															<%=f.input :admin,:label=>false%>
                            </div>
                        </div>
                        <div class='control-group'>
                            <label class='control-label'>注册时间</label>
                            <div class='controls'>
															<%=I18n.localize( @user.created_at,:format=>:long)%>
                            </div>
                        </div>
                    </div>
                </fieldset>
								<div class="control-group">
							  		<div class="controls">
							    		<%= f.submit "提交" ,:class=>"btn btn-primary"%>
										<%= link_to '返回', admin_users_path,:class=>"btn" %>
							  		</div>
								</div>
						<%end%>
        </div>
    </div>
</div>