<%= content_for :title do %>
	浏览所有商品信息
<% end %>
<div class='span11 box bordered-box blue-border' style='margin-bottom:0;'>
    <div class='box-header blue-background'>
        <div class='title'>所有商品列表</div>
        <div class='actions'>
					<%= link_to  admin_products_path(:format => :csv) ,:class=>"btn btn-mini btn-link" do%>
							<i class="icon-save">导出CSV</i>
					<%end%>
            <a href="#" class="btn box-collapse btn-mini btn-link"><i></i>
            </a>
        </div>
    </div>
    <div class='box-content box-no-padding'>
        <div class='responsive-table'>
            <div class='scrollable-area'>
							<table class="table table-hover">
							  <thead>
							    <tr>
							      <th>图片</th>
							      <th>名称</th>
							      <th>介绍</th>
							      <th>价格</th>
							      <th>单位</th>
							      <th>公开商品</th>

								  <th>
											操作
								  </th>
							    </tr>
							  </thead>

							  <tbody>
							    <% @products.each do |product| %>
							      <tr>
							        <td><%= image_tag product.cover_url(:small),:class=>"img-polaroid" %></td>
							        <td><%= link_to product.name, product %></td>
							        <td><%= product.content %></td>
							        <td><%= number_to_currency product.price,:unit=>"¥"%></td>
							        <td><%= product.unit %></td>
							        <td><%= t product.public.to_s %></td>

							        <td>
										<div class="btn-group">
										  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
										    操作
										    <span class="caret"></span>
										  </a>
										<ul class="dropdown-menu">
											<li><%= link_to '编辑', edit_product_path(product) ,:method=>:get%></li>
							        		<li><%= link_to '删除', product, method: :delete, data: { confirm: '确定删除吗?' } %></li>
										</ul>
										</div>
									</td>
							      </tr>
							    <% end %>
							  </tbody>
							</table>
					</div>
				</div>					
			</div>
			<%=will_paginate @shoppings%>
	</div>		
</div>